        <record id="my_quotation_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="action_quotation_send" position="before">
                        <button name="button_valorado" string="Valorado" states="draft"
                                type="workflow" class="oe_highlight" groups="base.group_user"/>
                        <button string="Enviado" type="workflow" name="signal_quotation_sent" states="valorado" class="oe_highlight"/>
                </button>

                <!--button name="action_quotation_send" position="attributes">
