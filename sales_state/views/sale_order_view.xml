                </button-->
                <!--button name="action_button_confirm" position="attributes">
                        <attribute name="states">valorado,sent,progress,manual</attribute>
                </button-->
                <field name="state" position="attributes">
                    <attribute name="statusbar_visible">draft,valorado,sent,progress,done</attribute>
                </field>
            </field>  
        </record>
	</data>
